#include "main.h"
ssize_t _getline(char **linptr, ssize_t *n, FILE *stream)
{
	ssize_t num_read, pos = 0;
	int ch;
	char *newptr;

	if (*linptr == NULL || *n == 0)
	{
		*n = 128;
		*linptr = malloc(*n);
		if (linptr == NULL)
			return (-1);
	}
	while ((ch = fgetc(stream)) != EOF)
	{
		if (pos >= *n - 1)
		{
			*n *= 2;
			*newptr = realloc(*linptr, *n);
			if (newptr == NULL)
				return (-1);
			*linptr = newptr;
		}
		(*linptr)[pos++] = (char)ch;
		if (ch == '\n')
			break;
	}
	(*linptr)[pos] = '\0';
	if (num_read > 0)
		num_read = pos;
	else if (ch == EOF)
		num_read = -1;
	return (num_read);
}
